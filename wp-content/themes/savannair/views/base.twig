<!doctype html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ site.name }}</title>
    <link rel="stylesheet" href="{{ site.theme.link }}/src/css/reset.css">
</head>
<body>
<h1 class="sr-only">
    {{ site.name }}
</h1>
<header class="header">
    <nav class="header__nav nav">
        <h2 class="main__nav__title sr-only">
            {{ primary_menu.title }}
        </h2>
        <ul class="header__nav__container nav__container">
            {% for item in primary_menu.items %}
                <li class="nav__item item__{{ item.slug }}">
                    <a class="item__link link__{{ item.slug }}"
                       href="{{ item.link }}">
                        {{ item.title }}
                    </a>
                    {% if item.children %}
                        <ul class="nav__children__container">
                            {% for child in item.children %}
                                <li class="nav__child__item child__item__{{ child.slug }}">
                                    <a class="nav__child__link child__link__{{ child.slug }}"
                                       href="{{ child.link }}">
                                        {{ child.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
</header>

{% block body '' %}

<footer class="footer">
    {% include '/partials/_contact_form.twig' %}
    <nav class="footer__nav nav">
        <h2 class="footer__nav__title">
            {{ footer_menu.title }}
        </h2>
        <ul class="header__nav__container nav__container">
            {% for item in footer_menu.items %}
                <li class="nav__item item__{{ item.slug }}">
                    <a class="item__link link__{{ item.slug }}"
                       href="{{ item.link }}">
                        {{ item.title }}
                    </a>
                    {% if item.children %}
                        <ul class="nav__children__container">
                            {% for child in item.children %}
                                <li class="nav__child__item child__item__{{ child.slug }}">
                                    <a class="nav__child__link child__link__{{ child.slug }}"
                                       href="{{ child.link }}">
                                        {{ child.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
    <p class="copyright">
        {{ __('Â©2022 Savannair. All Rights Reserved.', 'savannair') }}
    </p>
</footer>
</body>
{# {{ function('wp_footer') }} #}
</html>
