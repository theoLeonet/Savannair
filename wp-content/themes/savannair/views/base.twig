<!doctype html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/x-icon"
          href="https://savannair.be/wp-content/themes/savannair/assets/pictures/favicon/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180"
          href="https://savannair.be/wp-content/themes/savannair/assets/pictures/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32"
          href="https://savannair.be/wp-content/themes/savannair/assets/pictures/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16"
          href="https://savannair.be/wp-content/themes/savannair/assets/pictures/favicon/favicon-16x16.png">
    <title>{{ site.name }}</title>
    <link rel="stylesheet" href="{{ function('savannair_mix', 'css/main.css') }}">
    <script type="text/javascript" src="{{ function('savannair_mix', 'js/Main.js') }}"></script>
    <script type="module" src="{{ function('savannair_mix', 'js/animations_min.js') }}"></script>
</head>
<body id="body">
<div class="overflow__wrapper">
    <h1 class="sr-only">
        {{ site.name }}
    </h1>
    <header class="header">
        <input type="checkbox" id="burger-menu__input" class="burger-menu__input">
        <label for="burger-menu__input" id="burger-menu__label">
            <nav class="header__nav nav">
                <h2 class="main__nav__title sr-only">
                    {{ primary_menu.title }}
                </h2>
                <div class="burger-menu__close">
                    <p>X</p>
                </div>
                <ul class="header__nav__container nav__container">
                    {% for item in primary_menu.items %}
                        <li class="nav__item item__{{ item.slug }}">
                            <a class="item__link link__{{ item.slug }}"
                               href="{{ item.link }}">
                                {{ item.title }}
                            </a>
                            {% if item.children %}
                                <ul class="nav__children__container">
                                    {% for child in item.children %}
                                        <li class="nav__child__item child__item__{{ child.slug }}">
                                            <a class="nav__child__link child__link__{{ child.slug }}"
                                               href="{{ child.link }}">
                                                {{ child.title }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </label>
    </header>

    {% block body '' %}

    <footer class="footer">
        {% include '/partials/_contact_form.twig' %}
        <div class="footer__main">
            <h2 class="footer__title">
                {{ site.title }}
            </h2>
            <nav class="footer__nav nav">
                <h3 class="footer__nav__title sr-only">
                    {{ footer_menu.title }}
                </h3>
                <ul class="footer__nav__container nav__container">
                    {% for item in footer_menu.items %}
                        <li class="nav__item item__{{ item.slug }}">
                            <a class="item__link link__{{ item.slug }}"
                               href="{{ item.link }}">
                                {{ item.title }}
                            </a>
                            {% if item.children %}
                                <ul class="nav__children__container">
                                    {% for child in item.children %}
                                        <li class="nav__child__item child__item__{{ child.slug }}">
                                            <a class="nav__child__link child__link__{{ child.slug }}"
                                               href="{{ child.link }}">
                                                {{ child.title }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </nav>
            <p class="copyright">
                {{ __('Â©2022 Savannair. All Rights Reserved.', 'savannair') }}
            </p>
        </div>
    </footer>
</div>
</body>
</html>
